<div class="nav_margin">
  <div class="col-md-12">

  <div class="col-md-7 big_image_border centered">
      <%= image_tag @project.photos.first.pic.url(:large), id:"mainImage", width:'600px', height:"450px"; %>
  </div>
  <div class="col-md-5 project_description" id="projectLink">
    <h3><%= @project.title %></h3>
    <% if @project.description.length > 300 %>
      <p> <%=  @project.description.first(300) %>  </p>
    <% else %>
      <p> <%= @project.description %> </p>
    <% end %>
    <%= link_to "Add Photo", new_project_photo_path(@project), id:"linker", class:"btn btn-default", remote:true %>
    <%= link_to "Edit Description", edit_project_path(@project), class: "btn btn-default", remote:true %>
    <%= link_to "Delete Project", project_path(@project),
                      data:{:confirm => "Are You Sure Sandman? This Is Gonna Delete All Images Associated With This Project!",
                      :method => "delete"}, class:"btn btn-default" %>
  </div>
</div>
  <div class="col-md-7 centered">
    <% @project.photos.each do |photo| %>
      <%= image_tag photo.pic.url(:thumb), class:"tnail" %>
    <% end %>
  </div>

    <script>
      $(".tnail").hover(function(){
        var src = $(this).attr("src");
        var lrc = src.replace("thumb", "large");
        $("#mainImage").attr("src",lrc);
      });
    </script>

</div>
