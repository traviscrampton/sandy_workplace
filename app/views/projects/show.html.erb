<div class="container">
  <div class="col-md-7 project_form">
    <div id="bigpic">



    </div>

    <div class="col-md-12">

      <%= image_tag src="", id:"mainImage" %>
    </div>

    <% @project.photos.each do |photo| %>
      <%= image_tag photo.pic.url(:thumb), class:"tnail" %>
    <% end %>

    <script>
    $(".tnail").hover(function(){
      var src = $(this).attr("src");
      var lrc = src.replace("thumb", "large");
      $("#mainImage").attr("src",lrc);
    });
    </script>

  </div>
  <div class="col-md-4">
    <h3><%= @project.title %></h3>
    <p> <%= @project.description %> </p>
    <%= link_to "Add Photo", new_project_photo_path(@project), id:"linker", remote:true %>
  </div>
</div>
