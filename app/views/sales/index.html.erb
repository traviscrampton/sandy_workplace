<%= render "layouts/transparent" %>
<div class="store_banner">
  <div class="col-md-12 centered">
    <h1>Store</h1>
  </div>
</div>
<br>

<div class="container">
  <div class="row">
    <% @sales.each do |sale| %>
      <div class="col-sm-4 col-lg-4 col-md-4">
          <div class="thumbnail">
              <%= image_tag sale.images.first.pic(:indexsize) %>
              <div class="caption">
                  <h4 class="pull-right"><%= number_to_currency(sale.price) %></h4>
                  <h4><%= link_to sale.title, sale_path(sale) %></h4>
                  <p><%= sale.material.first(50) %></p>
              </div>
          </div>
      </div>
      <% end %>
    </div>



                    </div>
